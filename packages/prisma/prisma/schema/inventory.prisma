model InventoryLog {
  id        Int                @id @default(autoincrement())
  productId Int
  variantId Int?
  type      InventoryLogType
  quantity  Int
  action    InventoryLogAction

  // timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // references 
  product Product         @relation(fields: [productId], references: [id])
  variant ProductVariant? @relation(fields: [variantId], references: [id])

  @@index([productId, variantId])
  @@map("InventoryLogs")
}

model RestockInventoryRequest {
  id          Int                           @id @default(autoincrement())
  productId   Int
  variantId   Int?
  quantity    Int
  requestedBy Int
  approvedBy  Int
  approvedAt  DateTime?
  status      RestockInventoryRequestStatus @default(PENDING)

  // timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // references
  product Product         @relation(fields: [productId], references: [id])
  variant ProductVariant? @relation(fields: [variantId], references: [id])

  @@index([productId, variantId, requestedBy, approvedBy])
  @@map("RestockInventoryRequests")
}

enum InventoryLogAction {
  ADDITION
  DEDUCTION
}

enum InventoryLogType {
  NEW_PRODUCT
  RESTOCK
  SALE
  REFUND
}

enum RestockInventoryRequestStatus {
  PENDING
  APPROVED
  DENIED
}
